<% title "New Question" %>

<% card_title_class "col-md-5" %>

<% card_title do %>
    <i class="fa fa-plus" aria-hidden="true"></i>
    New Question
<% end %>

<% err do %>
<%= render partial: 'layouts/errors', locals:{model:@question} %>
<% end %>

<% custom_class "card-body bg-light" %>

<% card_body do %>
    <%= render partial: 'form', locals:{question:@question, categories:Category.all} %>
<% end %>

<%= render 'layouts/main_container' %>
