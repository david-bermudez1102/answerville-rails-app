<%= content_tag :tr, class:connections_li do %>
  <%= content_tag :td, width:60 do %>
    <%= link_to render_connections_img(connection), connection, class:"card-link text-light border-0" %>
  <% end %>
  <%= content_tag :td, width:110, class:"text-left"  do %>
    <%= content_tag :h4, connection.name, class:'card-title my-auto title-ellipsis', title:connection.name %>
    <%= link_to "@#{connection.username}", connection, class:"card-link text-light title-ellipsis" %>
  <% end %>
  <%= content_tag :td, class:"text-nowrap", style:"width:150px;" do %>
    <%= render(partial:'followers/form', locals:{user:connection}) if connection != current_user %>
  <% end %>
<% end %>
