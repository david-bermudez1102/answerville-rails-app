<% title following_title(@user) %>

<%= content_tag :div, class:"col-lg-6" do %>
  <%= render 'layouts/flash_message' %>
  <%= card do %>
    <%= card_header do %>
      <%= cell "row", "col text-center" do %>
        <%= content_tag :h2, class:card_title_class do %>
          <%= icon "fa-users" %> <%= following_card_title(@user) %>
        <% end %>
      <% end %>
    <% end %>

    <%= card_body class:connections_card_body do %>
      <%= ul class:connections_ul do %>
        <%= render(partial:'following/following', collection:@user.following) || not_following_anyone(@user) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
