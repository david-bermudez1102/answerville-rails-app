<% title "Welcome" %>

<%= content_tag :div, class:"col-xl-7" do %>
  <%= render 'layouts/flash_message' %>

  <%= card do %>
      <%= card_header do %>
          <%= cell "row", "col text-center" do %>
          <%= content_tag :h1, 'Hey! Welcome to @nswerville!', class:"card-title display-3" %>
          <% end %>
      <% end %>

      <%= card_body class:welcome_card_body do %>
        <%= content_tag :div, class:welcome_message do %>
          <%= content_tag :div,"A place where you can ask and anybody can answer", class:"card-subtitle display-4", style:"font-size:36px;" %>
        <% end %>
        <%= content_tag :div, class:welcome_options do %>
          <%= content_tag :div, class:welcome_options_container do %>
            <%= link_to 'Login', login_path, class:welcome_options_button %> or
            <%= link_to 'Sign Up', signup_path, class:welcome_options_button %> 
          <% end %>
        <% end %>
      <% end %>
  <% end %>
<% end %>