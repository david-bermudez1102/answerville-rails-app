<% title "Welcome" %>
<%= content_tag :div, class:"col-lg-5 col-xl-6" do %>
  <%= render 'layouts/flash_message' %>
  <%= card do %>
    <%= card_header do %>
      <%= cell "row p-0", "col text-center p-0" do %>
        <%= content_tag :h1, 'Welcome to Answerville', class:"card-title display-4", style:"font-size: 42px;" %>
      <% end %>
    <% end %>
    <%= card_body class:welcome_card_body do %>
      <%= content_tag :div, class:welcome_message do %>
        <%= content_tag :div,"A place where you can ask anything and anybody can answer", class:"card-subtitle display-4", style:"font-size:32px;" %>
      <% end %>
      <%= content_tag :div, class:welcome_options do %>
        <%= content_tag :div, class:welcome_options_container do %>
          <%= link_to 'Login', login_path, class:welcome_options_button %>
          <%= link_to 'Sign Up', signup_path, class:welcome_options_button %>
        <% end %>
      <% end %>
    <% end %>
    <%= card_footer class:welcome_card_footer do %>
      <%= ul class:social_options do %>
        <%= li class:social_options_container do %>
          <%= content_tag :h4, 'USE SOCIAL MEDIA TO LOGIN', class:h4_welcome_class, style:"font-size:24px;" %>
        <% end %>
        <%= li class:social_options_container do %>
          <%= cell "row justify-content-center", "col-sm-6 d-flex justify-content-between" do %>
            <%= link_to icon("fa-facebook"), '/auth/facebook',class:facebook_button, method: :post %>
            <%= link_to icon("fa-google"), '/auth/google',class:google_button, method: :post %>
            <%= link_to icon("fa-github"), '/auth/github',class:github_button, method: :post %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
