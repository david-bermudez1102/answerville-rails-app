<% title "Sign up" %>
<%= content_tag :div, class:"col-xs-auto", style:"min-width:200px; width:500px" do %>
  <%= render partial: 'layouts/errors', locals:{model:@user} %>
  <%= render 'layouts/flash_message' %>
  <%= card do %>
    <%= card_header do %>
      <%= cell "row", "col text-center" do %>
        <%= card_title :h1, icon:"fa-sign-in", label:"Sign Up" %>
      <% end %>
    <% end %>
    <%= card_body class:signup_card_body do %>
      <%= render partial: 'form', locals:{user:@user} %>
      <%= content_tag :div, class:form_group_class+" text-center" do %>
        <small><%= link_to 'Already have an account? Login here.', login_path, class:"card-link text-secondary" %></small>
      <% end %>
    <% end %>
  <% end %>
<% end %>
