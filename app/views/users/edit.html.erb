<% title "Edit Information" %>

<%= content_tag :div, class:"col-sm-auto", style:"width:500px;" do %>
    <%= render partial: 'layouts/errors', locals:{model:@user} %>
    <%= render 'layouts/flash_message' %>
    
    <%= card do %>
        <%= card_header do %>
            <%= cell "row px-0", "col text-center" do %>
            <%= card_title :h1, icon:"fa-sign-in", label:"Edit Information" %>
            <% end %>
        <% end %>

        <%= card_body class:signup_card_body do %>
            <%= render partial: 'form', locals:{user:current_user} %>
        <% end %>
    <% end %>
<% end %>