<%= form_with url:search_path do |f| %>
  <%= content_tag :div, class:'input-group' do %>
    <%= f.text_field "q", class:'form-control', placeholder:"Search Content", aria:{label:"Search Content", describedby:"search-addon2"}%>
    <%= content_tag :div, class:'input-group-append' do %>
      <%= f.button class:search_button, id:"search-addon2" do %>
        <%= icon "fa-search"%>
      <% end %>
    <% end %>
  <% end %>
<% end %>
