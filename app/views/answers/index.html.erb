
<% title "All #{@user.username} Answers" %>

<%= content_tag :div, class:"col-md-7" do %>
  <%= render 'layouts/flash_message' %>
  <%= card do %>
    <%= card_header do %>
        <%= cell "row", "col text-center" do %>
          <%= card_title :h1, icon:"fa-comments", label:answers_header_title(@user) %>
        <% end %>
    <% end %>

    <%= card_body class:answers_card_body do %>
      <%= no_questions_answered(@user) if @user.answers.empty? %>
        <% @questions.keys.each do |question| %>
        <%= ul class:questions_ul do %>
          <li class="list-group-item" style="background-color: rgba(0,0,0,0.1);border-top:1px solid rgba(0,0,0,0.1);">
            <blockquote>
              <%= ul class:"list-group" do %>
                <%= render(question.answers.order(id: :desc)) || content_tag(:h4, "No answers yet.", class:no_answers) %>
              <% end %>
              <%= cell "text-muted row text-light", "col text-light" do %>
                  Answers to <cite><a href="/questions/<%=question.id%>" class="card-link text-light">"<%=question.content%>"</a></cite> Created by <cite><%=question.user.username%></cite>
              <% end %>
            </blockquote>
          </li>
        <% end %>
        <% end %>
    <% end %>
  <% end %>
<% end %>
