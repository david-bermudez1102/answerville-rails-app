<%= li class:question_li do %>
  <%= cell "row", "col d-flex justify-content-between" do %>
    <%= content_tag :h5, class:answer_header_title do %>
      <%= link_to render_img(answer.user, "50x50", "50px"), answer.user, class:card_link_class %>
      <span class="pl-2"><%= wrote(answer.user) %></span>
    <% end %>
    <%= content_tag :small, class:"text-right p-0" do %>
      <span class="d-block">Created <%=distance_of_time_in_words(answer.created_at.to_i, Time.now)%> ago.</span> 
      <span class="d-block">Updated <%=distance_of_time_in_words(answer.updated_at.to_i, Time.now)%> ago.</span>
    <% end %>
  <% end %>
  <%= cell "row bg-white", "col card-text py-2" do %>
    <%=answer.content%>
  <% end %>
  <%= cell "row", "col" do %>
    <%= render partial:'layouts/options', locals:{content:answer, options_class:"btn p-0 bg-transparent text-info"} %>
  <% end %>
<% end %>
